{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "height": 28,
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

	"modules-left": ["custom/padd","custom/l_end","cpu","gpu","memory","custom/r_end","custom/l_end","clock","custom/r_end","custom/padd"],
    "modules-center": ["custom/padd","custom/l_end","hyprland/workspaces","hyprland/window","custom/r_end","custom/l_end","mpris","custom/r_end","custom/padd"],
	"modules-right": ["custom/padd","custom/l_end","network","pulseaudio","pulseaudio#microphone","custom/updates","hyprland/language","custom/r_end","custom/l_end","custom/cliphist","custom/power","custom/r_end","custom/padd"],

    "mpris": {
        "format": "{player_icon} {dynamic}",
        "rotate": 0,
        "format-paused": "{status_icon} {dynamic}",
        "player-icons": { 
            "default": "‚ñ∂",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "ÔÅå"
        },
        // "ignored-players": ["firefox"]
        "max-length": 25,
        "interval": 1
    },

    "cpu": {
        "interval": 10,
        "format": "Û∞çõ {usage}%",
        "rotate": 0,
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"]
    },

    "memory": {
        "states": {
            "c": 90, // critical
            "h": 60, // high
            "m": 30, // medium
        },
        "interval": 30,
        "format": "Û∞æÜ {used}GB",
        "rotate": 0,
        "format-m": "Û∞æÖ {used}GB",
        "format-h": "Û∞ìÖ {used}GB",
        "format-c": "Ôê° {used}GB",
        "format-alt": "Û∞æÜ {percentage}%",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": "Û∞æÜ {percentage}%\nÓâ¶ {used:0.1f}GB/{total:0.1f}GB"
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "rotate": 0,
        "format-alt": "{:%R Û∞É≠ %d¬∑%m¬∑%y}",
        "tooltip-format": "<span>{calendar}</span>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },

    "hyprland/workspaces": {
        "disable-scroll": true,
        "rotate": 0,
        "all-outputs": true,
        "active-only": false,
        "on-click": "activate",
        "disable-scroll": false,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
        "persistent-workspaces": {
        }
    },

    "hyprland/window": {
        "format": " ÔåÉ {}",
        "rotate": 0,
        "separate-outputs": true,
        "rewrite": {
            "drzaytsev@archlinux:(.*)": "$1 Ôíâ",
            "(.*) ‚Äî Mozilla Firefox": "$1 Û∞àπ",
            "(.*)Mozilla Firefox": "Firefox Û∞àπ",
            "(.*) - Visual Studio Code": "$1 Û∞®û",
            "(.*)Visual Studio Code": "Code Û∞®û",
            "(.*) ‚Äî Dolphin": "$1 Û∞âã",
            "(.*)Spotify": "Spotify Û∞ìá",
            "(.*)Steam": "Steam Û∞ìì"
        },
        "max-length": 25
    },

    "network": {
        "tooltip": true,
        "format-wifi": "Ôá´ ",
        "rotate": 0,
        "format-ethernet": "Û∞àÄ ",
        "tooltip-format": "Network: <big><b>{essid}</b></big>\nSignal strength: <b>{signaldBm}dBm ({signalStrength}%)</b>\nFrequency: <b>{frequency}MHz</b>\nInterface: <b>{ifname}</b>\nIP: <b>{ipaddr}/{cidr}</b>\nGateway: <b>{gwaddr}</b>\nNetmask: <b>{netmask}</b>",
        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞ñ™ ",
        "tooltip-format-disconnected": "Disconnected",
        "format-alt": "<span foreground='#799d6a'>ÔÄô {bandwidthDownBytes}</span> <span foreground='#ffb964'>ÔÇì {bandwidthUpBytes}</span>",
        "interval": 2
    },

    "pulseaudio": {
        "format": "{icon} {volume}",
        "rotate": 0,
        "format-muted": "Ô™Ä {volume}",
        "on-click": "pavucontrol -t 3",
        "on-click-right": "volumecontrol.sh -s ''",
        "on-click-middle": "volumecontrol.sh -o m",
        "on-scroll-up": "volumecontrol.sh -o i",
        "on-scroll-down": "volumecontrol.sh -o d",
        "tooltip-format": "{icon} {desc} // {volume}%",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source} {source_volume}",
        "rotate": 0,
        "format-source": "Ô°´",
        "format-source-muted": "ÔÑ±",
        "on-click": "pavucontrol -t 4",
        "on-click-middle": "volumecontrol.sh -i m",
        "on-scroll-up": "volumecontrol.sh -i i",
        "on-scroll-down": "volumecontrol.sh -i d",
        "tooltip-format": "{format_source} {source_desc} // {source_volume}%",
        "scroll-step": 5
    },

    "custom/updates": {
        "exec": "systemupdate.sh",
        "return-type": "json",
        "format": "{}",
        "rotate": 0,
        "on-click": "hyprctl dispatch exec 'systemupdate.sh up'",
        "interval": 86400, // once every day
        "tooltip": true,
        "signal": 20
    },

    "custom/cliphist": {
        "format": "ÔÉ™{}",
        "rotate": 0,
        "exec": "echo ; echo Û∞Öá clipboard history",
        "on-click": "sleep 0.1 && cliphist.sh c",
        "on-click-right": "sleep 0.1 && cliphist.sh d",
        "on-click-middle": "sleep 0.1 && cliphist.sh w",
        "interval" : 86400, // once every day
        "tooltip": true
    },

    "hyprland/language": {
        "format": "ÔÑú  {short}",
        "rotate": 0,
        "on-click": "keyboardswitch.sh"
    },

    "custom/power": {
        "format": "ÔÄë{}",
        "rotate": 0,
        "exec": "echo ; echo ÔÄë logout",
        "on-click": "logoutlaunch.sh 2",
        "on-click-right": "logoutlaunch.sh 1",
        "interval" : 86400, // once every day
        "tooltip": true
    },

    "custom/music": {
        "exec": "mediaplayer.py --player YandexMusic",
        "format": "ÔÜº {}",
        "rotate": 0,
        "return-type": "json",
        "on-click": "playerctl play-pause --player YandexMusic",
        "on-click-right": "playerctl next --player YandexMusic",
        "on-click-middle": "playerctl previous --player YandexMusic",
        "on-scroll-up": "volumecontrol.sh -p YandexMusic i",
        "on-scroll-down": "volumecontrol.sh -p YandexMusic d",
        "max-length": 25,
        "escape": true,
        "tooltip": true
    },


// modules for padding //

    "custom/l_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/r_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/sl_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/sr_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/rl_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/rr_end": {
        "format": " ",
        "interval" : "once",
        "tooltip": false
    },

    "custom/padd": {
        "format": "  ",
        "interval" : "once",
        "tooltip": false
    }

}

